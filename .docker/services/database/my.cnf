[mysqld]
# Basic Settings
skip-host-cache
skip-name-resolve
datadir         = /var/lib/mysql
# socket        = /run/mysqld/mysqld.sock # Standard path
bind-address    = 0.0.0.0
user            = mysql

# Fix for the "normalize" error in your logs
secure-file-priv = ""

# Logging
log_error = /var/log/mysql/error.log

# Character Set
character-set-server  = utf8mb4
collation-server      = utf8mb4_general_ci

[mysql]
default-character-set = utf8mb4
